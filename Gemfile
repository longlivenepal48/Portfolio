# Gemfile
source "https://rubygems.org"

# Specify Jekyll version. Using a common, stable version.
gem "jekyll", "~> 3.9.3"

# Jekyll plugins listed in your _config.yml
gem "jekyll-seo-tag", "~> 2.8.0"
gem "jekyll-feed", "~> 0.17.0"
gem "jekyll-sitemap", "~> 1.4.0"

# Common Markdown parsers for Jekyll, often needed explicitly for CI
gem "kramdown", "~> 2.3" # Or a version compatible with Jekyll 3.9.x
gem "kramdown-parser-gfm", "~> 1.1"

# Required for `jekyll serve` in Ruby 3+ (good practice for local dev)
gem "webrick", "~> 1.7"